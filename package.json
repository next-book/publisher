{
  "name": "@next-book/publisher",
  "version": "0.2.24",
  "description": "Publish web books with next-book",
  "main": "dist/app.js",
  "bin": {
    "publish-nb": "./bin/cli.js"
  },
  "scripts": {
    "tscRun": "tsc && node dist/app.js",
    "dev": "onchange 'src/*' -v -- npm run tscRun",
    "bundle": "browserify src/browser.ts -p [ tsify --noImplicitAny ] > dist/browser.js",
    "transpile": "babel dist/browser.js --out-file dist/browser.js",
    "updateExample": "cp dist/browser.js docs/browser.js",
    "updateDocs": "typedoc --out docs/api src/**.ts",
    "build": "tsc && npm run bundle && npm run transpile && npm run updateExample && npm run updateDocs",
    "build:watch": "onchange 'src/*.js' -v -- npm run build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/next-book/publisher.git"
  },
  "keywords": [
    "publisher",
    "next-book",
    "web books"
  ],
  "author": "Jan Martinek",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/next-book/publisher/issues"
  },
  "homepage": "https://github.com/next-book/publisher#readme",
  "dependencies": {
    "acorn": "^7.1.1",
    "cli-progress": "^2.1.1",
    "commander": "^2.20.3",
    "express": "^4.17.1",
    "i18next": "^20.3.5",
    "jsdom": "^16.6.0",
    "pretty": "^2.0.0",
    "recursive-copy": "^2.0.10",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^2.7.1",
    "slug": "^0.9.4"
  },
  "peerDependencies": {
    "@next-book/interface": "^0.1.25"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^26.0.24",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^16.4.13",
    "@types/recursive-readdir": "^2.2.0",
    "@types/rimraf": "^3.0.1",
    "@types/slug": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "browserify": "^16.5.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^27.0.6",
    "onchange": "^6.1.0",
    "ts-jest": "^27.0.4",
    "tsify": "^5.0.4",
    "typedoc": "^0.21.5",
    "typescript": "^4.3.5"
  }
}
